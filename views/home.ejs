<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>
<hr>
<form action="/compose" method="get">
    <input type="submit" value="Compose a blog!" class="btn" id="btn">
</form>
<hr>
<% posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>
    <p><%= post.content.substring(0,100) %> ...<a href="/post/<%= post._id %>">Read More</a></p>
<% }) %>

<%- include('partials/footer'); -%>